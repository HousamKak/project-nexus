# Project Nexus Configuration

# Development Settings
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Production Settings
# NODE_ENV=production
# PORT=8080
# API_URL=https://projectnexus.app

# Security
CSP_POLICY="default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self'"

# Features
ENABLE_OFFLINE=true
ENABLE_ANALYTICS=false
ENABLE_EXPERIMENTS=false

# Storage
MAX_STORAGE_MB=500
AUTO_BACKUP_DAYS=7

# Performance
MAX_PROJECTS=1000
MAX_FILES_PER_PROJECT=10000
ANIMATION_FPS=60
PARTICLE_COUNT=50

# Theme
DEFAULT_THEME=cosmic-dark

# Debug
DEBUG_MODE=false
LOG_LEVEL=info